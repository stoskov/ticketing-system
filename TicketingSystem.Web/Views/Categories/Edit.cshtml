@model CategoryViewModel

@{
    ViewBag.Title = "Edit Category";
}

<div class="page page-edit-category">

    <div class="row-fluid ticket-main-title-wrap">
        <div class="span10">
            <h3>Edit Category</h3>
        </div>
        <div class="span2 clearfix ticket-actions">
            <a class="right" href='@Url.Action("Details", new { id = this.Model.Id })'>Back</a>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <fieldset class="form-horizontal ticket-form">

            @Html.Partial("_CreateUpdateCategory", this.Model)

            <div class="controls-row clearfix">
                <div class="right">
                    <input type="submit" value="Save" class="btn btn-success" />
                    <a class="btn btn-inverse" href='@Url.Action("Details", new { id = this.Model.Id })'>Cancel</a>
                </div>
            </div>
        </fieldset>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</div>
