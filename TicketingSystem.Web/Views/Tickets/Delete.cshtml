@using TicketingSystem.Web.Models.Tickets;

@model TicketDetailsViewModel

@{
    ViewBag.Title = "Delete Ticket";
}

<div class="page page-delete-ticket">
    <div class="row-fluid ticket-main-title-wrap">
        <div class="span10">
            <h3>Delete Ticket</h3>
        </div>
        <div class="span2 clearfix ticket-actions">
            <a class="right" href='@Url.Action("Details", new { Id = this.Model.Id })'>Back</a>
        </div>
    </div>

    <div class="alert alert-error clearfix">
        <strong>Warning!</strong> Are you sure you want to delete this?.
    </div>

    @Html.Partial("_TicketDetails", this.Model, new ViewDataDictionary { { "RenderButtons", false } })

    <div class="clearfix separate">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="controls-row clearfix">
                <div class="right">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a class="btn btn-inverse" href='@Url.Action("Details", new { id = this.Model.Id })'>Cancel</a>
                </div>
            </div>
        }
    </div>
</div>